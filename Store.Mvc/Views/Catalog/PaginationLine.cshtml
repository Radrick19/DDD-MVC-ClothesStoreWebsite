@using Store.API.ViewModels.Catalog;
@model PaginationLineViewModel
@if(Model != null && Model.CountOfPages != 1){
    <ul class="pagination">
        @if(Model.TotalPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                @{ int prevPage = Model.TotalPage - 1;}
                <a href="#" class="page-link" onclick="UpdatePages(@prevPage)">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        @for (int i = 1; i < Model.CountOfPages + 1; i++)
        {
            if(Model.TotalPage == i)
            {
                <li class="page-item active">
                    <a href="#" onclick="UpdatePages(@i)" class="page-link">
                        @i
                    </a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a href="#" onclick="UpdatePages(@i)" class="page-link">
                        @i
                    </a>
                </li>
            }
        }
        @if(Model.TotalPage == Model.CountOfPages)
        {
            <li class="page-item disabled">
                <a class="page-link" id="next-page">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                @{
                    int nextPage = Model.TotalPage + 1;
                }
                <a href="#" class="page-link" onclick="UpdatePages(@nextPage)">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
}